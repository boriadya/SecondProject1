<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/assurance1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15pt"
        android:inputType="text"
        android:hint="@string/message_res"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/assurance2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15pt"
        android:inputType="number"
        android:hint="@string/key_res"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/nulish"
        android:onClick="eloquent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15pt"
        android:text="@string/encrypt_res" />

    <EditText
        android:id="@+id/implausible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15pt"
        android:inputType="text"
        android:hint="@string/main_res"
        android:importantForAutofill="no" />

</LinearLayout>